@{
    ViewBag.Title = "Flowers";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Indique d'utiliser le layout
}
<section class="content-header">
    <h1>
        Produit
        <small>Insertion simple</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="box" style="width: 50%; margin-left: auto; margin-right: auto">
        <div class="box box-header with-border">
            <h3 class="box-title">Insertion produit</h3>
        </div>
        <!-- /.box-header -->
        <form action="@Url.Action("CreateProduit", "Produit")" method="POST">
            <div class="box-body">
                <table class="table table-bordered">
                    <!-- Nom -->
                    <tr>
                        <td>
                            <label for="exampleInputEmail1">
                                Designation
                            </label>
                        </td>
                        <td>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="exampleInputEmail1"
                                name="designation"
                            >
                        </td>
                     </tr>
 
                    <!-- Description -->
                    <tr>
                        <td>
                            <label for="exampleInputEmail1">
                                Description
                            </label>
                        </td>
                        <td>
                            <input 
                                type="text" 
                                class="form-control"
                                name="description"
                                id="exampleInputEmail1"
                            >
                        </td>
                    </tr>

                    <!-- Prix de vente -->
                    <tr>
                        <td>
                            <label for="exampleInputEmail1">
                                Prix de vente
                            </label>
                        </td>
                        <td>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="exampleInputEmail1" 
                                name="pu"
                                placeholder="0.0"
                            >
                        </td>
                    </tr>

                    <!-- Unite -->
                    <tr>

                        <td>
                            <label for="select_">Famille centralisée</label>
                        </td>
                        <td>
                            @Html.DropDownList(
                                "idunite",
                                ViewBag.Unities as SelectList,
                                new { @class = "form-control" }
                            )
                        </td>

                    </tr>

                    <!-- Famille centralisée -->
                    <tr>
             
                        <td>
                            <label for="select_">Famille centralisée</label>
                        </td>
                        <td>
                            @Html.DropDownList(
                                "idcategorie",
                                ViewBag.Categories as SelectList,
                                new {@class = "form-control"}
                            )
                        </td>
        
                    </tr>
            </table>
        </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="reset" class="btn btn-default">Reinitialiser</button>
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>  
        </form>
    </div>
</section>