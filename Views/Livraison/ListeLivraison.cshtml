@using Template.Models.livraison

@{
    var ls = ViewBag.Livraisons as List<VLivraisonComplet>;
    ViewBag.Title = "Livraison";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Indique d'utiliser le layout
}

<section class="content-header">
    <h1>
        Livraison
        <small> Liste</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Livraison</a></li>
        <li class="active">Liste</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- LISTE -->
    <div class="box" style="width: 85%; margin-left: auto; margin-right: auto">
        <div class="box box-header with-border">
            <h3 class="box-title">Liste des LIVRAISONS</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered" style="border-width: 3px">
                <!-- Remarque -->
                <tr class="text-center text-bold success">
                    <td >Id</td>
                    <td>Date</td>
                    <td>Fournisseur</td>
                    <td>Magasin</td>
                </tr>

                <!-- Bon de Commande -->
                @if(ls != null)
            {
                foreach (var l in ls)
                {
                    <tr>
                           
                        <td>
                                <a 
                                    href="@Url.Action("DetailLivraison", "Livraison", new { id =  @l.Id })"
                                            style="color: #0000EE; text-decoration: underline;"
                                >
                                @l.Id
                            </a>
                        </td>
                        <td>@l.Date</td>
                        <td>@l.FNom</td>
                        <td>@l.MNom</td>
                    </tr>
                }
            }
            </table>
        </div>
    </div>
    <!-- FICHE EXPORTATION -->
    <div class="box"
         style="width:20%;position: absolute;bottom: 45px;right: 10px;  ">

        <div class="box-body ">
            <form action="@Url.Action("Exporter", "Livraison")" method="post">
                <table class="table table-bordered text-center">
                    <!-- Remarque -->
                    <tr class="text-center text-bold info">
                        <td colspan="3">Choisir format</td>
                    </tr>

                    <tr>
                        <td>
                            <div class="form-check">
                                <input type="radio"
                                       name="format"
                                       id="male"
                                       value="pdf"
                                       class="form-check-input">
                                <label for="male" class="form-check-label">
                                    <img src="~/img/pdf.png"
                                         alt="pdf"
                                         width="25">
                                </label>
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                <input type="radio"
                                       name="format"
                                       id="male"
                                       value="excel"
                                       class="form-check-input">
                                <label for="excel" class="form-check-label">
                                    <img src="~/img/exceller.png"
                                         alt="excel"
                                         width="25">
                                </label>
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                <input type="radio"
                                       name="format"
                                       id="male"
                                       value="csv"
                                       class="form-check-input">
                                <label for="csv" class="form-check-label">
                                    <img src="~/img/csv.png"
                                         alt="csv"
                                         width="25">
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <button type="submit" class="btn btn-info">
                                Exporter
                            </button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</section>
