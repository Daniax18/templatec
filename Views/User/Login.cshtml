<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Pharmacie | @ViewBag.Title </title>
    @Html.Partial("_LinkHtml")
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="login-box-body">
            <div class="text-center">
                <img src="~/img/Logo.PNG" alt="Logo" />
                <h2 class="login-box-msg mt-3">
                    Identification
                </h2>
            </div>

            <!-- Affichage des messages d'erreur -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form action="@Url.Action("Login", "User")" method="post">
                <div class="form-group has-feedback">
                    <input 
                        type="text" 
                        name="nom"
                        class="form-control" 
                        placeholder="Nom"
                    >
                    <i class="fa fa-fw fa-user form-control-feedback"></i>

                </div>
                <div class="form-group has-feedback">
                    <input 
                        type="password" 
                        class="form-control"
                        name="pwduser"
                        placeholder="Mot de passe"
                    >
                    <i class="fa fa-fw fa-lock  form-control-feedback"></i>
                </div>
                <div>
                    <label for="select_">Magasin</label>
                    @Html.DropDownList(
                        "idmagasin", 
                        ViewBag.Magasins as SelectList, 
                        "Sélectionnez un magasin", 
                        new { @class = "form-control" }
                    )
                </div>
               
                <div class="d-flex flex-row justify-content-between">
                    <!-- /.col -->
                    <div class="">
                        <p class="mb-0">Version du 16-10-2024</p>
                        <p class="mb-0"> 09:16 AM</p>
                    </div>
                    <!-- /.col -->
                    <div class="">
                        <button type="submit" class="btn btn-success btn-block btn-flat">Connecter</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>



        </div>
        <!-- /.login-box-body -->
    </div>
    @Html.Partial("_LinkJs")
</body>
</html>
